# LaTeX Converter Environment Configuration
# Kopiere diese Datei zu .env und f√ºlle die Werte aus

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_DEBUG=True

# Model Configuration
MODEL_NAME=microsoft/phi-4-mini-instruct
MODEL_CACHE_DIR=./models
MODEL_MAX_LENGTH=1024

# API Keys (NICHT in Git committen!)
MISTRAL_API_KEY=your-mistral-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_TOKEN=your-huggingface-token-here

# LaTeX Configuration
LATEX_COMPILER=pdflatex
LATEX_TIMEOUT=30
LATEX_MAX_ITERATIONS=3

# Security Configuration
MAX_CONTENT_LENGTH=10485760  # 10MB
RATE_LIMIT_PER_MINUTE=60
ALLOWED_FILE_EXTENSIONS=pdf,txt,md

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL=3600  # 1 hour
ENABLE_GPU=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Database (falls verwendet)
DATABASE_URL=postgresql://user:password@localhost/dbname

# Redis (falls verwendet)
REDIS_URL=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your-sentry-dsn-here